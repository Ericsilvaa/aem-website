{
  "stylelint.validate": ["css", "scss"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "files.exclude": {
    ".idea": true,
    ".gitlab": true,
    "sonar-projects.properties": false,
    "all": true,
    "apps.structure": true,
    "archetype.properties": true,
    "LICENSE": true,
    "core/target": true,
    "apps/target": true,
    "content/target": true,
    "frontend/target": true,
    ".gitattributes": true,
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue"
  ],
  "files.eol": "\n",
  "cSpell.language": "en,pt,pt_BR",
  "cSpell.words": ["jupiter", "pinia", "Pinia", "Servlet", "servlets"],
  "java.compile.nullAnalysis.mode": "disabled",
  "java.configuration.updateBuildConfiguration": "interactive",
  "jest.jestCommandLine": "npm run test:unit --",
  "jest.rootPath": "frontend",
  "git.autofetch": true,
}